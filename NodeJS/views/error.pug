doctype html
html(lang="en")
    head
        title !{title}
        //Favicon
        link(rel='icon', type='image/icon-x', href='/img/favicon.ico')

        //Fonts
        link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Roboto:400,300|Raleway:300,400,900,700italic,700,300,600')
        link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Montserrat:400,700')
        link(rel='stylesheet', type='text/css', href='css/font-awesome/css/font-awesome.min.css')
        style(type="text/css").
            html, body {
                background-color: #67bdef !important;
            }

            .error {
                color: white;
                fill: white;
                font-family: 'Montserrat', Verdana, sans-serif;
                font-size: 12em;
                margin-top: 30%;
            }

            .rule {
                stroke: white;
                background-color: white;
                color: white;
                width: 50%;
                float: left;
                stroke-width: 2px;
                border: 0 none;
                height: 2px;
            }

            .message {
                color: white;
                fill: white;
                font-family: 'Montserrat', Verdana, sans-serif;
                font-size: 4em;
                clear: left;
                margin-bottom: 50px;
            }

            .report {
                display: inline;
                float: left;
                margin-right: 20px;
                text-transform: uppercase;
                color: white;
                border: 2px solid white;
                padding: 12px;
                border-radius: 20px;
                font-family: 'Montserrat', Verdana, sans-serif;
                font-weight: 400;
                font-size: 1.5em;
            }

            .report:hover {
                text-decoration: none;
            }

        //Stylesheets
        //link(rel="stylesheet", type="text/css", href="/css/error.css")
        link(rel='stylesheet', type='text/css', href='css/theme/bootstrap.min.css')
    body
        .container
            .row
                h1.error !{error}
                h1.message !{desc}
                hr.rule
                h1.message Whoops, something went wrong!
                a.report(href="/")
                    span.fa.fa-home
                    |  Home
                a.report(href="/contact")
                    span.fa.fa-spin.fa-cog
                    |  Report Problem
    script(src='js/theme/jquery.min.js')
    script(src='js/theme/jquery.easing.min.js')
    script(src='js/theme/bootstrap.min.js')
    script(src='js/theme/wow.js')
    script(type="text/javascript").
        var error = "!{error}";
